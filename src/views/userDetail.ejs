<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") %>
        <link rel="stylesheet" href="/css/style-users.css">
        </link>
</head>
<!-- <div class="top-header-top">Materiales el√©ctricos</div> -->

<body>
    <!-- HEADER -->
    <header class="main-header">
        <%- include("partials/header") %>
    </header>
    <!-- &&&& -->
    <!-- MAIN -->
    <main>
        <h2>Detalle del usuario <%= user.name %></h2>
        <div class="user-detail-form">
            <div class="detail-user">
                <div class="detail-user-img">
                    <p><img src="/images/users/<%= user.image %>" width="100%"></p>
                </div>
                <div class="detail-user-info">
                    <p class="detail-attr"><%= user.name %>
                    </p>
                    <p class="detail-attr"><%= user.lastName %>
                    </p>
                    <p class="detail-attr"><%= user.email %>
                    </p>
                    <p class="detail-attr"><%= user.birthDate %>
                    </p>
                    <div class="detail-user-actions">
                        <div>
                            <a href="/users/edit/<%= user.id %>"><button class="edit-button">Editar usuario</button></a>
                        </div>
                        <form action="/users/delete/<%= user.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="delete-button">Borrar usuario
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="detail-user-activity">
                <div>
                    <h2>Presupuestos vigentes</h2>
                </div>
                <div>
                    <h2>Favoritos</h2>
                </div>
                <div>
                    <h2>Compras realizadas</h2>
                </div>
            </div>
        </div>
    </main>
    <!-- &&&& -->
    <!-- FOOTER -->
    <footer class="main-footer">
        <%- include("partials/footer") %>
    </footer>
    <!-- &&&& -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>