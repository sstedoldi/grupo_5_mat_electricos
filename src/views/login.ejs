<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/style-users.css">
    </link>
</head>
<!-- <div class="top-header-top">Materiales eléctricos</div> -->

<body>
  <!-- HEADER -->
  <header class="main-header"><%- include("partials/header") %></header>
  <!-- &&&& -->
  <!-- MAIN -->
  <!-- ERRORES -->
  <div class="errors">
    <% if (typeof errors !="undefined" ){ %>
      <p style="color: red">En uno o mas campos hay un error</p>
      <ul>
        <%for (let i=0; i < errors.length; i++){%>
          <li><i class="fas fa-exclamation-triangle"></i>
            <%=errors[i].msg%>
          </li>
          <%}%>
      </ul>
      <%}%>
  </div>
  <main class="main-login">
    <!-- LOGIN FORM -->
    <div class="form-login">
      <form action="/users/login" method="POST" id="loginForm">
        <h3>Inicia sesión</h3>
        <label for="email">Email</label>
        <input class="controls" type="email" name="email" placeholder="ej@ejemplo.com"
          value=" <%= locals.oldData && oldData.email ? oldData.email : "" %>">
          <span></span>
        <div class="errors">
          <%= locals.errors && errors.email ? errors.email.msg : "" %>
        </div>
        <label for="">Contraseña</label>
        <input class="controls" type="password" name="password" placeholder="contraseña">
        <span></span>
        <div class="errors">
          <%= locals.errors && errors.password ? errors.password.msg : "" %>
        </div>
        <input type="checkbox" name="recordame">
        <label for="recordame">Recordame</label>
        <br>
        <br>
        <input class="buttons" type="submit" name="login" value="Ingresar" />
      </form>
      <br>
      <p><a href="#">Olvidaste tu contraseña?</a></p>
      <p><a href="/users/register">Registrate acá</a></p>
    </div>
  </main>
  <!-- &&&& -->
  <!-- FOOTER -->
  <footer class="main-footer"><%- include("partials/footer") %></footer>
  <!-- &&&& -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="/js/loginValidation.js"></script>
</body>

</html>