    <!-- MAIN -->
    <main class="main-product">
        <div class="product-figure-info">
            <div class="product-figure">
                <img src=<%= (product.image != undefined) ? "/images/products/"+product.image+"" : "/images/products/img-default-"+product.category.name+".jpg" %>
                width="360" alt="img-<%= product.category.name %>.jpg" />
            </div>
            <div class="product-info">
                <div class="product-info-title">
                    <p class="product-info-name">
                        <%= product.description %>
                    </p>
                    <p class="product-info-brand"> 
                        <%= product.brand.name %>
                    </p>
                    <p class="product-info-brand">
                        <%= product.category.name %>
                    </p>                    
                    <p class="product-info-brand">
                        <%= product.subcategory.name %>
                    </p>
                </div>
                <p class="product-info-price"><b class="product-info-price-number">&#x24 <%= product.nonvatPrice %></b>
                    c/u</p>
                <div class="product-quantity">
                    <label for="quantity">Cantidad:</label>
                    <input type="number" class="product-quantity-input" id="quantity" name="quantity" min="1" max="2000">
                </div>
                <br>
                <div>
                    <button class="product-add-to-cart">Agregar al carrito
                        <i class="fas fa-cart-plus" style="font-size: 20px;"></i>
                    </button>
                </div>
                <br>
                <div>
                    <button class="product-payment-options">Ver formas de pago
                        <i class="fas fa-credit-card" style="font-size: 20px;"></i>
                    </button>
                </div>
                <br>
                <div>
                    <form action="/products/edit/<%= product.id %>" method="GET">
                        <button class="product-payment-options">Editar producto
                        </button>
                </div>
                <br>
                <div class="product-add-to-wishes">
                    <a  href="#">Agregar a mi lista de deseos
                        <i class="fas fa-heart"></i>
                    </a>
                </div>
