<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/style-products.css">
    </link>
  </head>
  <!-- <div class="top-header-top">Materiales eléctricos</div> -->
  
  <body>
    <!-- HEADER -->
    <header class="main-header">
      <%- include("partials/header") %>
    </header>
    <!-- &&&& -->
    <!-- MAIN -->
    <main class="main-home">
      <div class="main-home-spot-1">
        <video width="90%" loop autoplay muted>
          <source src="./images/videos/EB-MAY-21-SUBS.mp4" />
        </video>
      </div>
      <section class="main-sections">
      <h3 class="main-section-title">Basados en tu última visita</h3>
      <div class="products-articles">
        <!-- ############# -->
        <% products.forEach(products=> { %>
          <% let i=1; %>
          <% if ((products.status=="visited" ) && (i<4)) { %>
            <% i++; %>
            <%- include("partials/article", {products}) %>
            <% } %>
            <% }) %>
            <!-- ############# -->
          </div>
        </section>
        <section class="main-sections">
          <h3 class="main-section-title">Productos en oferta</h3>
          <div class="products-articles">
            <!-- ############# -->
            <% products.forEach(products=> { %>
              <% let i=1; %>
              <% if ((products.status=="hot-sale" ) && (i<4)) { %>
                <% i++; %>
                <%- include("partials/article", {products}) %>
                <% } %>
                <% }) %>
                <!-- ############# -->
              </div>
            </section>
          </main>
          
          
  <!-- &&&& -->
  <!-- FOOTER -->
  <footer class="main-footer">
    <%- include("partials/footer") %>
  </footer>
  <!-- &&&& -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>

</html>