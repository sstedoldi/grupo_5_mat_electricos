<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/style-products.css"></link>
    <link rel="stylesheet" href="/css/style-users.css"></link>
</head>
<body>
    <!-- HEADER -->
    <header class="main-header">
        <%- include("partials/header") %>
    </header>
    <!-- &&&& -->
    <!-- MAIN -->
    <main>
        <div class="form-product-create">
            <h3 class="form-create-title"> Ac√° podes actualizar tus datos <%= userToEdit.name %></h3>
            <form action="/users/update/<%= userToEdit.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="div-create-forms">
                    <div class="formularios-create">
                        <label for="name" class="form-label-create">Nombre:</label>
                        <input class="form-input-create" type="text" name="name" id="name"
                            value="<%= userToEdit.name %>" />
                    </div>
                    <div class="formularios-create">
                        <label for="lastName" class="form-label-create">Apellido:</label>
                        <input class="form-input-create" type="text" name="lastName" id="lastName"
                            value="<%= userToEdit.lastName %>" />
                    </div>
                    <div class="formularios-create">
                        <label for="password" class="form-label-create">Email:</label>
                        <input class="form-input-create" value="<%= userToEdit.email %>" type="email"
                            name="email" id="email" />
                    </div>
                    <div class="formularios-create">
                        <label for="image" class="form-label-create">Imagen:</label>
                        <input type="file" id="image" name="image" class="form-input-create">
                    </div>
                    <div  class="formularios-create-button">
                        <input class="edit-button" type="submit" value="Editar Usuario" />
                    </div>
                </div>
            </form>
            <div class="div-create-forms" class="formularios-create-button">
                <form action="/users/delete/<%= userToEdit.id %>?_method=DELETE" method="POST">
                    <button class="delete-button">Borrar Usuario
                    </button>
                </form>
            </div>
        </div>
    </main>
    <!-- &&&& -->
    <!-- FOOTER -->
    <footer class="main-footer">
        <%- include("partials/footer") %>
    </footer>
    <!-- &&&& -->
</body>

</html>